# Server Configuration
PORT=3000
# NOTE: NODE_ENV is optional - production is auto-detected if DATABASE_URL exists
NODE_ENV=development

# Database Configuration (for local development)
# Use individual variables for local PostgreSQL
DB_USER=postgres
DB_HOST=localhost
DB_NAME=mcare_db
DB_PASSWORD=your_password
DB_PORT=5432

# Production Database (for Render, Railway, Heroku)
# Use DATABASE_URL for production - SSL is automatically configured
# DATABASE_URL=postgresql://username:password@host:port/database
# Example from Render: postgresql://user:pass@dpg-xxxxx.oregon-postgres.render.com/dbname

# Frontend URL (for CORS)
# Local: http://localhost:5173
# Production: https://your-app.vercel.app
FRONTEND_URL=http://localhost:5173

# Email Configuration (for contact form notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# JWT Secret (for authentication)
JWT_SECRET=your-secret-key-change-this-in-production

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.jpg,.jpeg,.png
